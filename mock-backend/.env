# Configuración optimizada de performance para AnimeFest
# Copia este archivo a .env para aplicar las optimizaciones

# === SCRAPING PERFORMANCE ===
# Scraping Performance Configuration (Stability-focused)
SCRAPE_CONCURRENCY=6
SCRAPE_TIMEOUT_MS=6000
NAVIGATION_TIMEOUT=6000
SELECTOR_TIMEOUT=3000

# === CACHE CONFIGURATION ===
# TTL del caché en milisegundos (20 minutos)
CACHE_TTL_MS=1200000

# Tamaño máximo del caché LRU
CACHE_MAX_SIZE=1000

# === REDIS CONFIGURATION (opcional) ===
# Descomenta para usar Redis como caché distribuido
# REDIS_URL=redis://localhost:6379

# === LOGGING ===
# Nivel de logging (info, debug, warn, error)
LOG_LEVEL=info

# Habilitar logs de performance detallados
PERFORMANCE_LOGS=true

# === BROWSER OPTIMIZATION ===
# Pre-warming del browser al iniciar (recomendado)
BROWSER_PREWARM=true

# Timeout por defecto para operaciones del browser
BROWSER_DEFAULT_TIMEOUT=3000

# === TARGETS DE PERFORMANCE ===
# Objetivo para carga en frío (ms)
COLD_LOAD_TARGET=1500

# Objetivo para carga en caliente (ms)
WARM_LOAD_TARGET=500
